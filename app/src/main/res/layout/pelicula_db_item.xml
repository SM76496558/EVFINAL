<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/view"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:background="#6D403535"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgPeliculaFavoritoItem"
            app:layout_constraintEnd_toEndOf="@+id/imgPeliculaFavoritoItem"
            app:layout_constraintStart_toStartOf="@+id/imgPeliculaFavoritoItem"
            app:layout_constraintTop_toTopOf="@+id/imgPeliculaFavoritoItem" />

        <ImageView
            android:id="@+id/imgPeliculaFavoritoItem"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"

            android:src="@drawable/detallebg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/txtTitleFavoritoItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="20dp"
            android:text="Letras Japoneas"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:elevation="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/imgPeliculaFavoritoItem" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_fill_star"
            android:elevation="21dp"
            app:layout_constraintEnd_toEndOf="@+id/imgPeliculaFavoritoItem"
            app:layout_constraintTop_toTopOf="@+id/imgPeliculaFavoritoItem" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>